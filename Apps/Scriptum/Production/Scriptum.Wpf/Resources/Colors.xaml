<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background Colors -->
    <SolidColorBrush x:Key="App.Background" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="Sidebar.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Topbar.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Content.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Statusbar.Background" Color="#F9F9F9"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="Border.Light" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="Border.Medium" Color="#CCCCCC"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="Text.Primary" Color="#212121"/>
    <SolidColorBrush x:Key="Text.Secondary" Color="#757575"/>
    <SolidColorBrush x:Key="Text.Disabled" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="Text.Inverse" Color="#FFFFFF"/>
    
    <!-- Brand Colors -->
    <SolidColorBrush x:Key="Brand.Primary" Color="#1976D2"/>
    <SolidColorBrush x:Key="Brand.Primary.Dark" Color="#1565C0"/>
    <SolidColorBrush x:Key="Brand.Primary.Light" Color="#BBDEFB"/>
    <SolidColorBrush x:Key="Brand.Accent" Color="#FFC107"/>
    
    <!-- Interactive Colors -->
    <SolidColorBrush x:Key="Navigation.Hover" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="Navigation.Selected" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="Navigation.Pressed" Color="#BBDEFB"/>
    
    <SolidColorBrush x:Key="Button.Primary.Background" Color="#1976D2"/>
    <SolidColorBrush x:Key="Button.Primary.Hover" Color="#1565C0"/>
    <SolidColorBrush x:Key="Button.Primary.Pressed" Color="#0D47A1"/>
    
    <SolidColorBrush x:Key="Button.Secondary.Background" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="Button.Secondary.Hover" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="Button.Secondary.Pressed" Color="#E0E0E0"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="Status.Success" Color="#4CAF50"/>
    <SolidColorBrush x:Key="Status.Warning" Color="#FF9800"/>
    <SolidColorBrush x:Key="Status.Error" Color="#F44336"/>
    <SolidColorBrush x:Key="Status.Info" Color="#2196F3"/>
    
    <!-- Badge Colors -->
    <SolidColorBrush x:Key="Badge.Success.Background" Color="#E8F5E9"/>
    <SolidColorBrush x:Key="Badge.Success.Text" Color="#2E7D32"/>
    <SolidColorBrush x:Key="Badge.Warning.Background" Color="#FFF3E0"/>
    <SolidColorBrush x:Key="Badge.Warning.Text" Color="#E65100"/>
    <SolidColorBrush x:Key="Badge.Error.Background" Color="#FFEBEE"/>
    <SolidColorBrush x:Key="Badge.Error.Text" Color="#C62828"/>
    <SolidColorBrush x:Key="Badge.Info.Background" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="Badge.Info.Text" Color="#1565C0"/>

</ResourceDictionary>
