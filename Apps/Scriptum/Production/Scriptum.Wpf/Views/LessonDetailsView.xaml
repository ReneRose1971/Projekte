<UserControl x:Class="Scriptum.Wpf.Views.LessonDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{Binding Titel}" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="{Binding Beschreibung}" FontSize="14" Foreground="Gray" Margin="0,5"/>
            <TextBlock Text="{Binding Schwierigkeit, StringFormat='Schwierigkeit: {0}'}" FontSize="12" Foreground="DarkGray"/>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Show Guide" Width="200" Height="40" Margin="0,5" 
                    Click="GuideButton_Click" IsEnabled="{Binding HasGuide}"/>
            <Button Content="Start Training" Width="200" Height="40" Margin="0,5" 
                    Click="StartButton_Click"/>
        </StackPanel>

        <Button Grid.Row="2" Content="Back" Width="100" HorizontalAlignment="Left" 
                Click="BackButton_Click"/>
    </Grid>
</UserControl>
