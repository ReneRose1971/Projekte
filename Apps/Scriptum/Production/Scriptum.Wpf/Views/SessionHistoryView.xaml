<UserControl x:Class="Scriptum.Wpf.Views.SessionHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Sitzungsverlauf" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <ListBox Grid.Row="1" ItemsSource="{Binding Sessions}" MouseDoubleClick="SessionList_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding LessonTitle}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding StartedAt, StringFormat='dd.MM.yyyy HH:mm'}" FontSize="12" Foreground="Gray"/>
                        <TextBlock Text="{Binding TotalErrors, StringFormat='Fehler: {0}'}" FontSize="12" Foreground="DarkGray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Row="2" Content="Zur&#252;ck" Width="100" HorizontalAlignment="Left" 
                Margin="0,10,0,0" Click="BackButton_Click"/>
    </Grid>
</UserControl>
