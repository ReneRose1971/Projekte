<UserControl x:Class="Scriptum.Wpf.Views.TrainingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:keyboard="clr-namespace:Scriptum.Wpf.Keyboard.Controls;assembly=Scriptum.Wpf.Keyboard"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Focusable="True"
             Loaded="TrainingView_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Training" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <Border Grid.Row="1" BorderBrush="#D1D5DB" BorderThickness="1" 
                CornerRadius="4" Padding="8" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="{Binding StatusText}" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding DisplayTarget}" FontSize="12" Foreground="Gray"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" BorderBrush="#D1D5DB" BorderThickness="1" 
                CornerRadius="4" Padding="10" Background="White">
            <keyboard:VisualKeyboard DataContext="{Binding Keyboard}" />
        </Border>

        <Button Grid.Row="3" Content="Back" Width="100" HorizontalAlignment="Left" 
                Margin="0,10,0,0" Click="BackButton_Click"/>
    </Grid>
</UserControl>
