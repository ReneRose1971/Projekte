<Window x:Class="SolutionBundler.WPF.MainWindowWithSplitView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:SolutionBundler.WPF.Controls"
        Title="Solution Bundler - Split View" 
        Height="600" 
        Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Gruppe:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox ItemsSource="{Binding AvailableGroups}"
                          SelectedItem="{Binding SelectedGroupFilter, Mode=TwoWay}"
                          MinWidth="150"
                          VerticalAlignment="Center"/>
            </StackPanel>

            <controls:ProjectListEditorView 
                Grid.Row="1"
                Title="Projekte"
                EmptyMessage="Keine Projekte hinzugefuegt. Klicken Sie auf Hinzufuegen."
                ItemsSource="{Binding FilteredProjects}"
                SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
                AddCommand="{Binding AddProjectCommand}"
                DeleteCommand="{Binding RemoveProjectCommand}"
                ClearCommand="{Binding ClearProjectsCommand}"
                IsAddVisible="True"
                IsDeleteVisible="True"
                IsClearVisible="True"
                IsEditVisible="False"/>
        </Grid>

        <GridSplitter Grid.Column="1"
                      HorizontalAlignment="Stretch"
                      Background="#DDDDDD"
                      ShowsPreview="True"/>

        <controls:LogOutputView 
            Grid.Column="2"
            Title="Ausgabe"
            LogText="{Binding LogText, Mode=TwoWay}"
            StatusText="{Binding StatusMessage}"
            Progress="{Binding ProgressPercentage}"
            ScanCommand="{Binding ScanAllProjectsCommand}"
            IsProgressVisible="True"
            IsScanVisible="True"
            AutoScrollToEnd="True"/>
    </Grid>
</Window>
