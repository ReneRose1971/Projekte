<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SolutionBundler.WPF.Controls"
                    xmlns:converters="clr-namespace:SolutionBundler.WPF.Converters">

    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
    <converters:InverseCountToVisibilityConverter x:Key="InverseCountToVisibilityConverter"/>

    <Style TargetType="{x:Type local:ProjectListEditorView}">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ProjectListEditorView}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="10"
                            CornerRadius="4">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top"
                                       Text="{TemplateBinding Title}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"/>

                            <StackPanel DockPanel.Dock="Bottom"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        Margin="0,10,0,0">
                                <Button Content="+ Hinzufuegen"
                                        Command="{TemplateBinding AddCommand}"
                                        Visibility="{TemplateBinding IsAddVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Padding="10,5"
                                        Margin="0,0,5,0"
                                        MinWidth="100"/>
                                <Button Content="Details"
                                        Command="{TemplateBinding EditCommand}"
                                        Visibility="{TemplateBinding IsEditVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Padding="10,5"
                                        Margin="0,0,5,0"
                                        MinWidth="100"/>
                                <Button Content="Entfernen"
                                        Command="{TemplateBinding DeleteCommand}"
                                        Visibility="{TemplateBinding IsDeleteVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Padding="10,5"
                                        Margin="0,0,5,0"
                                        MinWidth="100"/>
                                <Button Content="Alle loeschen"
                                        Command="{TemplateBinding ClearCommand}"
                                        Visibility="{TemplateBinding IsClearVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Padding="10,5"
                                        MinWidth="100"/>
                            </StackPanel>

                            <Grid>
                                <ListBox x:Name="PART_ListBox"
                                         ItemsSource="{TemplateBinding ItemsSource}"
                                         SelectedItem="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SelectedItem, Mode=TwoWay}"
                                         BorderThickness="1"
                                         BorderBrush="#DDDDDD"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10" 
                                                    BorderThickness="0,0,0,1" 
                                                    BorderBrush="#EEEEEE">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding StatusIcon}"
                                                               FontSize="18"
                                                               Margin="0,0,10,0"
                                                               VerticalAlignment="Center"
                                                               ToolTip="{Binding StatusText}"/>
                                                    
                                                    <StackPanel VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontWeight="Bold"
                                                                   FontSize="14"/>
                                                        <TextBlock Text="{Binding Path}"
                                                                   Foreground="Gray"
                                                                   FontSize="11"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   MaxWidth="500"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>

                                <Border Background="#F9F9F9"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="20">
                                    <Border.Visibility>
                                        <Binding Path="ItemsSource.Count" 
                                                 RelativeSource="{RelativeSource TemplatedParent}"
                                                 Converter="{StaticResource InverseCountToVisibilityConverter}"/>
                                    </Border.Visibility>
                                    <StackPanel HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                        <TextBlock Text="[Ordner]" 
                                                   FontSize="48" 
                                                   HorizontalAlignment="Center"
                                                   Foreground="#CCCCCC"
                                                   Margin="0,0,0,10"/>
                                        <TextBlock Text="{TemplateBinding EmptyMessage}"
                                                   HorizontalAlignment="Center"
                                                   Foreground="Gray"
                                                   FontStyle="Italic"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   MaxWidth="300"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
