<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SolutionBundler.WPF.Controls"
                    xmlns:converters="clr-namespace:SolutionBundler.WPF.Converters">

    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
    <converters:InverseCountToVisibilityConverter x:Key="InverseCountToVisibilityConverter"/>

    <!-- Style for ProjectListEditorView -->
    <Style TargetType="{x:Type local:ProjectListEditorView}">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ProjectListEditorView}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="10"
                            CornerRadius="4">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top"
                                       Text="{TemplateBinding Title}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"/>

                            <StackPanel DockPanel.Dock="Bottom"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        Margin="0,10,0,0">
                                <Button Content="+"
                                        Command="{TemplateBinding AddCommand}"
                                        Visibility="{TemplateBinding IsAddVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Padding="10,5"
                                        Margin="0,0,5,0"
                                        MinWidth="40"
                                        FontSize="16"
                                        FontWeight="Bold"/>
                                <Button Content="-"
                                        Command="{TemplateBinding DeleteCommand}"
                                        Visibility="{TemplateBinding IsDeleteVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Padding="10,5"
                                        Margin="0,0,5,0"
                                        MinWidth="40"
                                        FontSize="16"
                                        FontWeight="Bold"/>
                                <Button Content="L&#246;schen"
                                        Command="{TemplateBinding ClearCommand}"
                                        Visibility="{TemplateBinding IsClearVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Padding="10,5"
                                        MinWidth="100"/>
                            </StackPanel>

                            <Grid>
                                <ListBox x:Name="PART_ListBox"
                                         ItemsSource="{TemplateBinding ItemsSource}"
                                         SelectedItem="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SelectedItem, Mode=TwoWay}"
                                         BorderThickness="1"
                                         BorderBrush="#DDDDDD"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10" 
                                                    BorderThickness="0,0,0,1" 
                                                    BorderBrush="#EEEEEE">
                                                <StackPanel Orientation="Horizontal">
                                                    <!-- Status Indicator: Green circle for existing, Red for missing -->
                                                    <Ellipse Width="12" 
                                                             Height="12"
                                                             Margin="0,0,10,0"
                                                             VerticalAlignment="Center"
                                                             ToolTip="{Binding StatusText}">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Fill" Value="#4CAF50"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding FileExists}" Value="False">
                                                                        <Setter Property="Fill" Value="#F44336"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>
                                                    
                                                    <StackPanel VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontWeight="Bold"
                                                                   FontSize="14"/>
                                                        <TextBlock Text="{Binding Path}"
                                                                   Foreground="Gray"
                                                                   FontSize="11"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   MaxWidth="500"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>

                                <Border Background="#F9F9F9"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="20">
                                    <Border.Visibility>
                                        <Binding Path="ItemsSource.Count" 
                                                 RelativeSource="{RelativeSource TemplatedParent}"
                                                 Converter="{StaticResource InverseCountToVisibilityConverter}"/>
                                    </Border.Visibility>
                                    <StackPanel HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                        <TextBlock Text="[Folder]" 
                                                   FontSize="48" 
                                                   HorizontalAlignment="Center"
                                                   Foreground="#CCCCCC"
                                                   Margin="0,0,0,10"/>
                                        <TextBlock Text="{TemplateBinding EmptyMessage}"
                                                   HorizontalAlignment="Center"
                                                   Foreground="Gray"
                                                   FontStyle="Italic"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   MaxWidth="300"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style for LogOutputView -->
    <Style TargetType="{x:Type local:LogOutputView}">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:LogOutputView}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <DockPanel>
                            <!-- Title Bar -->
                            <Border DockPanel.Dock="Top"
                                    Background="#F5F5F5"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="0,0,0,1"
                                    Padding="10">
                                <TextBlock Text="{TemplateBinding Title}"
                                           FontSize="16"
                                           FontWeight="Bold"/>
                            </Border>

                            <!-- Status Bar -->
                            <Border DockPanel.Dock="Bottom"
                                    Background="#F5F5F5"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="0,1,0,0"
                                    Padding="10,5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Text -->
                                    <TextBlock Grid.Column="0"
                                               Text="{TemplateBinding StatusText}"
                                               VerticalAlignment="Center"
                                               FontSize="12"/>

                                    <!-- Scan Button -->
                                    <Button Grid.Column="1"
                                            Content="Scan &amp; Bundle"
                                            Command="{TemplateBinding ScanCommand}"
                                            Visibility="{TemplateBinding IsScanVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Padding="15,5"
                                            Margin="0,0,10,0"
                                            MinWidth="140"
                                            Background="#4CAF50"
                                            Foreground="White"
                                            BorderThickness="0"
                                            FontWeight="Bold">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="3"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                                  VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#45A049"/>
                                                                </Trigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter Property="Background" Value="#3D8B40"/>
                                                                </Trigger>
                                                                <Trigger Property="IsEnabled" Value="False">
                                                                    <Setter Property="Background" Value="#CCCCCC"/>
                                                                    <Setter Property="Foreground" Value="#888888"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <!-- Progress Bar -->
                                    <ProgressBar Grid.Column="2"
                                                 Width="150"
                                                 Height="18"
                                                 Value="{TemplateBinding Progress}"
                                                 Minimum="0"
                                                 Maximum="100"
                                                 Visibility="{TemplateBinding IsProgressVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </Grid>
                            </Border>

                            <!-- Log TextBox -->
                            <TextBox x:Name="PART_LogTextBox"
                                     Text="{Binding LogText, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                     IsReadOnly="True"
                                     TextWrapping="NoWrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     Padding="10"
                                     Background="White"
                                     BorderThickness="0"/>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
