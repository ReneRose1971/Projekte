<Window x:Class="SolutionBundler.WPF.Windows.ProjectDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:SolutionBundler.WPF.Controls"
        Title="Projekt-Details"
        Width="550"
        Height="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Details View -->
        <controls:ProjectDetailsView x:Name="DetailsView" Grid.Row="0"
                                     DataContext="{Binding}"/>

        <!-- Button Panel -->
        <Border Grid.Row="1"
                Background="#F5F5F5"
                BorderBrush="#DDDDDD"
                BorderThickness="0,1,0,0"
                Padding="15,10">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="OK"
                        Width="80"
                        Height="28"
                        Margin="0,0,10,0"
                        IsDefault="True"
                        Click="OkButton_Click"/>
                <Button Content="Abbrechen"
                        Width="80"
                        Height="28"
                        IsCancel="True"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

