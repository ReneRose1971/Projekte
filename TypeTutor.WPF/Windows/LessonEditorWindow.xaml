<!-- src/TypeTutor.WPF/LessonEditorWindow.xaml -->
<Window x:Class="TypeTutor.WPF.LessonEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TypeTutor.WPF"
        Title="Lesson Editor" Width="1000" Height="640"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="CanResize">
    <DockPanel>
        <Border Background="{StaticResource WindowTitleBarBrush}" DockPanel.Dock="Top" Height="36" MouseLeftButtonDown="TitleBar_MouseDown">
            <Grid>
                <TextBlock Text="Lesson Editor" Foreground="White" VerticalAlignment="Center" Margin="12,0,0,0" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,12,0">
                    <Button Content="_" Width="28" Click="OnMinimize" />
                    <Button Content="[]" Width="28" Click="OnToggleMaximize" />
                    <Button Content="X" Width="28" Click="OnClose" />
                </StackPanel>
            </Grid>
        </Border>

        <local:LessonEditorView />
    </DockPanel>
</Window>
