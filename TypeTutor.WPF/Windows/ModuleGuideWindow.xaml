<Window x:Class="TypeTutor.WPF.ModuleGuideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TypeTutor.WPF"
        Title="Modulbeschreibungen" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- 30% / 70% split -->
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <local:ModuleGuideListView Grid.Column="0" DataContext="{Binding ListVM}" />
        <local:ModuleGuideDetailsView Grid.Column="1" DataContext="{Binding ListVM}" />
    </Grid>
</Window>